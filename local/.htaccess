# Disable content negotiation that can interfere with clean URLs
Options -MultiViews

# Serve index.html by default in directories
DirectoryIndex index.html

RewriteEngine On

# Redirect directory requests missing a trailing slash to include it
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+[^/])$ $1/ [R=301,L]

# Return 403 for these endpoints even if no physical file exists
RewriteRule ^(?:wp-login\.php|xmlrpc\.php|wlwmanifest\.xml)$ - [F,L]
